def test_create_order_detail(client):
    customer = client.post("/customers/", json={"name": "Alice", "email": "alice@example.com"}).get_json()
    sushi = client.post("/sushi_items/", json={"name": "Salmon Roll", "price": 12.5}).get_json()
    order = client.post("/orders/", json={"customer_id": customer["id"]}).get_json()

    response = client.post("/order_details/", json={
        "order_id": order["id"],
        "sushi_item_id": sushi["id"],
        "quantity": 2
    })
    assert response.status_code == 201
    data = response.get_json()
    assert data["order_id"] == order["id"]
    assert data["sushi_item_id"] == sushi["id"]


def test_get_order_detail(client):
    customer = client.post("/customers/", json={"name": "Bob", "email": "bob@example.com"}).get_json()
    sushi = client.post("/sushi_items/", json={"name": "Tuna Roll", "price": 10.0}).get_json()
    order = client.post("/orders/", json={"customer_id": customer["id"]}).get_json()
    created = client.post("/order_details/", json={
        "order_id": order["id"],
        "sushi_item_id": sushi["id"],
        "quantity": 1
    }).get_json()

    response = client.get(f"/order_details/{created['id']}")
    assert response.status_code == 200
    assert response.get_json()["id"] == created["id"]


def test_update_order_detail(client):
    customer = client.post("/customers/", json={"name": "Charlie", "email": "charlie@example.com"}).get_json()
    sushi = client.post("/sushi_items/", json={"name": "Eel Roll", "price": 15.0}).get_json()
    order = client.post("/orders/", json={"customer_id": customer["id"]}).get_json()
    created = client.post("/order_details/", json={
        "order_id": order["id"],
        "sushi_item_id": sushi["id"],
        "quantity": 1
    }).get_json()

    response = client.put(f"/order_details/{created['id']}", json={"quantity": 3})
    assert response.status_code == 200
    assert response.get_json()["quantity"] == 3


def test_delete_order_detail(client):
    customer = client.post("/customers/", json={"name": "Dave", "email": "dave@example.com"}).get_json()
    sushi = client.post("/sushi_items/", json={"name": "Tempura Roll", "price": 20.0}).get_json()
    order = client.post("/orders/", json={"customer_id": customer["id"]}).get_json()
    created = client.post("/order_details/", json={
        "order_id": order["id"],
        "sushi_item_id": sushi["id"],
        "quantity": 2
    }).get_json()

    response = client.delete(f"/order_details/{created['id']}")
    assert response.status_code == 200
    assert response.get_json()["message"] == "deleted"
